# Set environment
NODE_ENV=development

# Database (MySQL)
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=root
DB_NAME=test_db

# Auth
JWT_SECRET=replace_me_with_a_long_random_string
JWT_EXPIRES_IN=15m

# Password reset
RESET_TOKEN_EXPIRES_MINUTES=30

# Optional (useful for reset links if you email them later)
FRONTEND_RESET_URL=http://localhost:5173/password/reset

# App
APP_NAME=Fullstack Auth Starter
APP_URL=http://localhost:5173

# SMTP (pick your provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password

# Email defaults
EMAIL_FROM_NAME=Fullstack Auth Starter
EMAIL_FROM_ADDRESS=your_email@example.com
